<%- include("partials/header"); -%>

<section class="banner banner-secondary" id="top" style="background-image: url(/img/banner-image-1-1920x300.jpg);">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="banner-caption">
          <div class="line-dec"></div>
          <h2><%=post.companyName%></h2>
          <h4><i class="fa fa-briefcase"></i> <%=post.jobRole%></h4>
        </div>
      </div>
    </div>
  </div>
</section>

<main>
  <section class="featured-places">
    <div class="container">
      <div class="row">
        <div class="col-lg-3 col-md-3 col-xs-12">
          <div>
            <img src="/img/blog-2-720x480.jpg" alt="" class="img-responsive wc-image">
          </div>
          <br>
        </div>

        <div class="col-lg-9 col-md-9 col-xs-12">
          <h2><strong class="text-primary">$60 000</strong></h2>

          <p class="lead">
            <i class="fa fa-map-marker"></i> India &nbsp;&nbsp;
            <i class="fa fa-calendar"></i> <%=post.date%> &nbsp;&nbsp;
            <i class="fa fa-file"></i> Contract
          </p>

          <div class="blue-button">
            <a href="/apply-job/<%=post._id%>">Apply for this job</a>
          </div>
        </div>
      </div>
      <h1>Company Name</h1>
      <h4><%=post.companyName%></h4>
      <h1>Job Role</h1>
      <h4><%=post.jobRole%></h4>
      <h1>Job Description</h1>
      <h4><%=post.jobDesc%></h4>
      <h1>Required Skills</h1>
      <h4><%=post.keySkills%></h4>
      <h1>Recruiter Name</h1>
      <h4><%=post.recruiterName%></h4>
    </div>
  </section>
</main>

<%- include("partials/footer"); -%>
